<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alvin Raygon"
            android:id="@+id/namePH"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page One"
            android:id="@+id/pageOne"
            android:layout_below="@+id/namePH"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:onClick="callPage1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page two"
            android:id="@+id/pageTwo"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/pageOne"
            android:layout_alignStart="@+id/pageOne"
            android:onClick="callPage2" />
    </RelativeLayout>
</RelativeLayout>
